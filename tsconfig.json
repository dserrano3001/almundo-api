{
	"files": [
		"src/index.ts"
	],
	"include": [
		"src/**/*.ts"
	],
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"target": "es2016",
		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": true,
		"baseUrl": ".",
		"moduleResolution": "node",
		"removeComments": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"lib": [
			"es2016"
		],
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"node",
			"lodash",
			"express"
		],
		"paths": {
			"*": [
				"node_modules/@types/*",
				"./src/types/*"
			]
		}
	}
}